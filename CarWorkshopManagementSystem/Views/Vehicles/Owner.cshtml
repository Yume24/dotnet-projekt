@model CarWorkshopManagementSystem.ViewModels.ClientVehiclesViewModel

<h2>Vehicle details</h2>
<table class="table">
    @{
        var v = Model.Vehicles.FirstOrDefault();
    }
    @if (v != null)
    {
        <tr><th>ID</th><td>@v.Id</td></tr>
        <tr><th>Brand</th><td>@v.Brand</td></tr>
        <tr><th>Model</th><td>@v.Model</td></tr>
        <tr><th>Year</th><td>@v.Year</td></tr>
        <tr><th>License Plate</th><td>@v.LicensePlate</td></tr>
    }
</table>

<h2>Owner details</h2>
<table class="table">
    <tr><th>ID</th><td>@Model.Client.Id</td></tr>
    <tr><th>Name</th><td>@Model.Client.Name</td></tr>
    <tr><th>Surname</th><td>@Model.Client.Surname</td></tr>
    <tr><th>Email</th><td>@Model.Client.Email</td></tr>
    <tr><th>Phone number</th><td>@Model.Client.PhoneNumber</td></tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Go back</a>