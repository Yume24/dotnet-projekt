@model IEnumerable<CarWorkshopManagementSystem.DTOs.ServiceOrders.ServiceOrderDetailsDto>

@{
    ViewData["Title"] = "Service Orders";
}

<h1>Service Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>

<a asp-action="DownloadAllOrdersPdf" class="btn btn-outline-secondary mb-3">
    📥 Pobierz wszystkie zlecenia jako PDF
</a>

<table class="table">
    <thead>
        <tr>
            <th>Vehicle</th>
            <th>Mechanic</th>
            <th>Status</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Vehicle</td>
                <td>@(order.Mechanic ?? "Not assigned")</td>
                <td>@order.Status</td>
                <td>@order.CreatedAt.ToShortDateString()</td>
                <td>
                     <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
 		     <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm ms-2">Edit</a>
    		     <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm ms-2">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
